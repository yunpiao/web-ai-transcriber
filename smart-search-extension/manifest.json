{
  "manifest_version": 3,
  "name": "网页 AI 转写器",
  "version": "4.3",
  "description": "通过右键菜单或点击扩展图标，使用AI服务转写和优化页面文本。",
  "options_page": "options.html",
  "action": {
    "default_title": "智能搜索",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
